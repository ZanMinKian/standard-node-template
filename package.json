{
  "name": "standard-node-template",
  "version": "1.0.0",
  "scripts": {
    "code:lint": "eslint --ext .ts,.js . && prettier -c './**/*.{ts,js}'",
    "code:clean": "eslint --ext .ts,.js --fix . && prettier -w './**/*.{ts,js}'",
    "code:check:rules": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.14.22",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "pm2": "^4.5.4",
    "poetic": "^1.6.0",
    "typescript": "^4.1.3"
  }
}
